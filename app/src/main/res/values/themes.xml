<!--toolbar-->
    <style name="TextAppearance.Shrine.Toolbar" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Widget.Shrine.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/textColorPrimary</item>
        <item name="android:theme">?theme</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="titleTextAppearance">@style/TextAppearance.Shrine.Toolbar</item>
    </style>

<!--navigatiom bottom-->
    <style name="Theme.App.NavigationBottom" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="bottomNavigationStyle">@style/Widget.App.BottomNavigationView</item>
    </style>

    <style name="Widget.App.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationView</item>
    </style>

    <style name="ThemeOverlay.App.BottomNavigationView" parent="">
        <item name="colorPrimary">@color/toolbarIconColor</item>
        <item name="colorOnPrimary">@color/textColorPrimary</item>
    </style>


<!--    input text-->
    <style name="Widget.Shrine.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:paddingBottom">8dp</item>
        <item name="boxStrokeColor">@color/colorAccent2</item>
        <item name="android:textColorHint">@color/colorAccent2</item>
        <item name="hintTextColor">@color/colorAccent2</item>

    </style>

<!--buttons-->
    <style name="Widget.Shrine.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/toolbarIconColor</item>
        <item name="backgroundTint">@color/colorAccent2</item>
    </style>

    <style name="Widget.Shrine.Button.OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/colorAccent2</item>
        <item name="strokeColor">@color/colorAccent2</item>
    </style>
    <style name="Widget.Shrine.Button.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/colorAccent2</item>
<!--        <item name="strokeColor">@color/colorAccent2</item>-->
    </style>


<!--    dialog-->
    <style name="Theme.App" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.App.MaterialAlertDialog</item>
    </style>

    <style name="ThemeOverlay.App.MaterialAlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
<!--        <item name="colorPrimary">@color/shrine_pink_100</item>-->
<!--        <item name="colorSecondary">@color/shrine_pink_100</item>-->
        <item name="colorSurface">@color/toolbarIconColor</item>
        <item name="colorOnSurface">@color/colorPrimary</item>
    </style>


    <!--    text styles-->

<!--    current weather-->
    <style name="CurrentWeatherNumberStyle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#344955</item>
        <item name="android:textSize">22dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CurrentWeatherItemStyle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#344955</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="CurrentWeatherDescriptionStyle" parent="TextAppearance.AppCompat">
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">#344955</item>
    </style>

<!--    favourite-->
    <style name="FavouriteNumberStyle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#344955</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="FavouriteItemStyle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#344955</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textStyle">normal</item>
    </style>
</resources>